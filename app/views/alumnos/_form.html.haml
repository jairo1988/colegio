= form_for @alumno, :html => { :multipart => true} do |f|
  -if @alumno.errors.any?
    #error_explanation
      %h2= "#{pluralize(@alumno.errors.count, "error")} prohibited this alumno from being saved:"
      %ul
        - @alumno.errors.full_messages.each do |msg|
          %li= msg

  %fieldset.datos_alumno
    %legend Matricular Alumno
    .field
      = f.label :nombre, :class => "label"
      = f.text_field :nombre, :size => "20", :maxlength => "20"
    .field
      = f.label :apellido, :class => "label"
      = f.text_field :apellido, :size => "20", :maxlength => "20"
    .field
      =f.label :email, :class => "label"
      =f.text_field :email, :size => "20", :maxlength => "20"

  = f.fields_for :user do |form_user|
    %fieldset.datos_usuario
      %legend Registrar Usuario
      .field
        =form_user.label :username, :class => "label"
        =form_user.text_field :username, :size => "20", :maxlength => "20"
      .field
        =form_user.label :emailuji, :class => "label"
        =form_user.text_field :emailuji, :size => "20", :maxlength => "20"
      .field
        = form_user.label :password, :class => "label"
        = form_user.password_field :password, :size => "20", :maxlength => "20"
      .field
        = form_user.label :password_confirmation, :class => "label"
        = form_user.password_field :password_confirmation, :size => "20", :maxlength => "20"
      .field
        = form_user.label :photo
        = form_user.file_field :photo

  .actions
    = f.submit 'Save'
