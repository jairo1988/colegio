%h1 Listing alumnos
%table
  %tr
    %th Nombre
    %th Apellido
    %th Email
    %th
    %th

  - if signed_in?

    - if current_user && (["Administrador", "Profesor"].include? current_user.role)
      - @alumnos.each do |alumno|
        %tr
          %td= link_to alumno.nombre, edit_alumno_path(alumno)
          %td= alumno.apellido
          %td= mail_to alumno.email
          %td= link_to image_tag("show.png"), alumno
          %td= link_to image_tag("destroy.jpg"), alumno, :confirm =>   "Â¿Seguro que quieres eliminar al alumno #{alumno.nombre} #{alumno.apellido}?", :method => :delete, :title => "Eliminar al alumno"
    - else
      - @alumnos.each do |alumno|
        %tr
          %td= alumno.nombre
          %td= alumno.apellido
          %td= mail_to alumno.email
          %td= link_to image_tag("show.png"), alumno

  - else
    - @alumnos.each do |alumno|
      %tr
        %td= alumno.nombre
        %td= alumno.apellido
        %td= mail_to alumno.email


