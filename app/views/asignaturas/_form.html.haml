= form_for @asignatura do |f|
  -if @asignatura.errors.any?
    #error_explanation
      %h2= "#{pluralize(@asignatura.errors.count, "error")} prohibited this asignatura from being saved:"
      %ul
        - @asignatura.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :asignatura
    = f.text_field :asignatura, :class=>"letra_asignaturas"
  .field.letra_asignaturas
    = f.label :temario
  .sidebar
    = f.text_area :temario, :class=> "letra_asignaturas"
  .field
    = f.label :profesor_id
    = f.collection_select :profesor_id, @profesors, :id, :nombre
  .field.letra_asiagnturas
    = f.label :diaexamen
    = f.datetime_select(:diaexamen, :order => [:day,:month,:year], :ampm =>true)
  .actions
    = f.submit 'Save'
