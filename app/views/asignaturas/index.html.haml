%h1 Listing asignaturas
%table
  %tr
    %th Asignatura
    %th Temario
    %th Profesor
    %th Examen
    %th
    %th

    - @asignaturas.each do |asignatura|
      %tr
        %td= asignatura.asignatura
        %td= asignatura.temario
        %td= link_to asignatura.profesor.nombre, profesores_path
        %td= asignatura.diaexamen

        - if current_user && current_user.role == "Administrador"
          %td= link_to image_tag("destroy.jpg"), asignatura,
            :confirm => "Â¿Seguro que quieres eliminar #{asignatura.asignatura}?",
            :method => :delete, :title => "Elimina la asignatura"
          %td= link_to 'Nueva Asignatura', new_asignatura_path
        - if current_user && current_user.role == "Profesor"
          %td= link_to image_tag("edit.png") , edit_asignatura_path(asignatura)


