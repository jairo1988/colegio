= form_for [@alumno, @calificacion] do |f|
  -if @calificacion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@calificacion.errors.count, "error")} prohibited this calificacion from being saved:"
      %ul
        - @calificacion.errors.full_messages.each do |msg|
          %li= msg

  -#.field
    -#= f.label :alumno_id
    -#= f.text_field :alumno_id
  .field
    = f.label :asignatura_id
    = f.collection_select :asignatura_id, @asignaturas, :id, :asignatura
  .field
    = f.label :nota
    = f.text_field :nota
  .field
    = f.label :comentarios
    = f.text_area :comentarios
  .actions
    = f.submit 'Save'
