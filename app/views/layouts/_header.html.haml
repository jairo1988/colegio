%header
  = link_to image_tag("rails.png"), root_path
  %nav.round
    %ul
      %li
        = link_to "Home", alumnos_path
      %li
        = link_to "Asignaturas", asignaturas_path
        - if signed_in?
          %li
            = link_to "Users", users_path
          - if current_user && (["Administrador","Profesor"].include?current_user.tipo)
            %li
              = link_to "Profesores", profesores_path
            %li
              = link_to "New Alumno",new_alumno_path
          - if current_user && current_user.tipo == "Administrador"
            %li
              = link_to "New Profesor",new_profesor_path

          %li
            = link_to "Log out", log_out_path
        - else
          %li
            = link_to "Log in", log_in_path
          -# %li
            -#= link_to "Registrarse", sign_up_path

