    %th
    %th
    %th

  - @profesores.each do |profesor|
    %tr
      %td= profesor.nombre
      %td= profesor.apellido
      %td= mail_to profesor.email
      %td= mail_to profesor.emailuji
      %td= profesor.oficina
      %td= profesor.telefono
      %td= link_to image_tag("show.png"), profesor
      %td= link_to image_tag("edit.png"), edit_profesor_path(profesor)
      - if current_user && current_user.role == "Administrador"
        %td= link_to image_tag("destroy.jpg"), profesor, :confirm => "Â¿Seguro que quieres eliminar al profesor #{profesor.nombre} #{profesor.apellido}?", :method => :delete, :title => "Eliminar al profesor"
