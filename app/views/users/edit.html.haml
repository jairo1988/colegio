= form_for @user, :html => { :multipart => true}  do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this alumno from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  -#.field
  -#  = f.label :surname
  -#  = f.text_field :surname
  .field
    =f.label :emailuji
    =f.text_field :emailuji
  .field
    =f.label :password
    =f.password_field :password
  .field
    =f.label :password_confirmation
    =f.password_field :password_confirmation
  .field
    = f.label :alumno_id
    = f.collection_select :alumno_id, @alumnos, :id, :nombre, :prompt => true
  .field
    = f.label :photo
    = f.file_field :photo
  -#.field
    -#= f.label :tipo
    -#%br
    -#- User::TIPOS_USUARIO.each do |t|
      -#= f.radio_button :tipo, t
      -#= f.label :tipo, t
      -#%br

  .actions
    = f.submit 'Save'
    = link_to 'Back', users_path
